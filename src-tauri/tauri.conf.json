{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "stopwatch-app",
  "version": "0.1.0",
  "identifier": "de.kifo.stopwatch-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "stopwatch-app",
        "width": 1000,
        "height": 800,
        "minWidth": 900,
        "minHeight": 700,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
